<Window x:Class="PicoChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicoChat"
        mc:Ignorable="d"
        Title="PicoChat" Height="402.44" Width="590.854" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>

        <Button x:Name="sendButton" Content="Send" Margin="0,0,10,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="99"/>
        <TextBox x:Name="messageToSendBox" Margin="10,0,114,10" TextWrapping="Wrap" Height="25" VerticalAlignment="Bottom" FontSize="14"/>
        <ScrollViewer Margin="10,10,10,40">
            <TextBox x:Name="messageBlock"
                     Background="Transparent"
                     BorderThickness="0"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     FontSize="16"/>
        </ScrollViewer>

    </Grid>
</Window>
