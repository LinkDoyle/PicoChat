<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicoChat"
        x:Class="PicoChat.ChatWindow"
        mc:Ignorable="d"
        Title="PicoChat"
        WindowStartupLocation="CenterScreen"
        Width="600" Height="400"
        MinWidth="600" MinHeight="400"
        x:Name="ChatWindowView"
        DataContext="{Binding ElementName=ChatWindowView}">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ListBox x:Name="JoinedRoomList"
                 Grid.Column="0" 
                 Margin="0,0,0,0" 
                 BorderThickness="0,1,1,0" 
                 ItemsSource="{Binding ViewModel.JoinRooms}"
                 SelectedItem="{Binding ViewModel.SelectedRoom}"
                 SelectionChanged="JoinedRoomList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListView Grid.Row="0" 
                      Margin="0,0,0,0"
                      BorderThickness="0,1,0,1"
                      x:Name="MessageListView"
                      ItemsSource="{Binding ViewModel.Messages}"
                      IsSynchronizedWithCurrentItem="True" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.Resources>
                    <DataTemplate DataType="{x:Type local:ChatTextMessage}">
                        <StackPanel>
                            <WrapPanel>
                                <TextBlock Text="{Binding Room}" Foreground="BlueViolet"/>
                                <TextBlock Text=" " />
                                <TextBlock Text="{Binding Name}" Foreground="BlueViolet"/>
                                <TextBlock Text=" " />
                                <TextBlock Text="{Binding UtcTime}" Foreground="ForestGreen" />
                                <Ellipse Width="5" Height="5" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" >
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Setter Property="Fill" Value="DarkRed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasReceipt}" Value="True">
                                                    <Setter Property="Fill" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Name}" Value="&lt;this&gt;">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </WrapPanel>
                            <TextBox Background="Transparent"
                                         BorderThickness="0"
                                         Margin="10, 0, 0, 10"
                                         FontFamily="Consolas"
                                         Text="{Binding Content, Mode=OneWay}"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap" />
                        </StackPanel>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type local:ChatImageMessage}">
                        <StackPanel>
                            <WrapPanel>
                                <TextBlock Text="{Binding Room}" Foreground="BlueViolet"/>
                                <TextBlock Text=" " />
                                <TextBlock Text="{Binding Name}" Foreground="BlueViolet"/>
                                <TextBlock Text=" " />
                                <TextBlock Text="{Binding UtcTime}" Foreground="ForestGreen" />
                                <Ellipse Width="5" Height="5" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" >
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Setter Property="Fill" Value="DarkRed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasReceipt}" Value="True">
                                                    <Setter Property="Fill" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Name}" Value="&lt;this&gt;">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </WrapPanel>
                            <Image Source="{Binding ImageSource}" Margin="5"></Image>
                        </StackPanel>
                    </DataTemplate>
                </ListView.Resources>
            </ListView>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Rectangle Grid.Column ="0" Width="24" Height="24" Margin="5,5,5,5" Visibility="Hidden"></Rectangle>
                <Button Grid.Column ="0" Click="SendImageButton_OnClick"  Width="24" Height="24" Margin="5,5,5,5" VerticalAlignment="Bottom" BorderBrush="{x:Null}">
                    <Image Source="images/picture.png"></Image>
                </Button>
                <TextBox x:Name="MessageToSendBox"
                         Grid.Column ="1"
                         Margin="5,5,5,5"
                         BorderThickness="0"
                         TextWrapping="Wrap"
                         FontSize="14"
                         VerticalAlignment="Center"
                         MaxHeight="300"
                         VerticalScrollBarVisibility="Auto"
                         Text="{Binding ViewModel.MessageToSend, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding ViewModel.SendMessageCommand}" Key="Enter"/>
                    </TextBox.InputBindings>
                </TextBox>
                <TextBlock Grid.Column ="1"
                           Margin="10,5,5,5" 
                           IsHitTestVisible="False" 
                           Text="Write a message..."
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"  
                           Foreground="DarkGray" 
                           FontSize="14">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=MessageToSendBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Rectangle Grid.Column ="2" Width="48" Height="24" Margin="5,5,5,5" Visibility="Hidden"></Rectangle>
                <Button Grid.Column ="2" Content="Send" Width="48" Height="24" Margin="5,0,5,5" VerticalAlignment="Bottom" Command="{Binding ViewModel.SendMessageCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>

